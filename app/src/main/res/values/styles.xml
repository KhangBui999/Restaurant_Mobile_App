<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#BB86FC</item>
        <item name="CustomChipChoiceStyle">@style/ChipStyle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="CustomChipChoiceStyle">@style/ChipStyle</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#6200EE</item>
        <item name="android:textAppearance">@style/ChipText</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ChipText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
